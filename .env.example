# Push-to-Write Configuration

# OpenAI API key (for fast online transcription)
OPENAI_API_KEY=your_key_here

# Local model fallback (only used if no API key)
WHISPER_MODEL=base
USE_CUDA=false

# Hotkey (press to start/stop recording)
HOTKEY_MODIFIER=alt
HOTKEY_KEY=t

# Language: auto, en, or fr
LANGUAGE=auto

# Microphone: auto or device index number (run with DEBUG=true to see list)
MIC_DEVICE=auto

# Debug output (shows available mic devices)
DEBUG=false
